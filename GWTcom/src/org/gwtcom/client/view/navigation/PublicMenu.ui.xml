<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateLocales="default" xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:gwtcom='urn:import:org.gwtcom.client.panel'>

	<ui:style field='style'
		type='org.gwtcom.client.view.navigation.PublicMenu.Style'>
			.publicmenu {
				padding: 0.5em;
				line-height: 150%;
			}
			
			.item {
				display: block;
			}
		</ui:style>

	<g:FlowPanel styleName='{style.publicmenu}' ui:field='panel' />
</ui:UiBinder>
