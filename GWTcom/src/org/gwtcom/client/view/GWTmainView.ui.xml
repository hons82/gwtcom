<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:gwtcom='urn:import:org.gwtcom.client.view'
	xmlns:gwtcomNav='urn:import:org.gwtcom.client.view.navigation'>

	<ui:style>
		.splitarea {
			background: none;
			margin: 5px;
		}
	</ui:style>
	<g:DockLayoutPanel unit='EM'>
		<g:north size='5'>
			<gwtcom:TopPanel ui:field='topPanel' />
		</g:north>

		<g:center>
			<g:SplitLayoutPanel styleName='{style.splitarea}'>
				<g:west size='192'>
					<gwtcomNav:Shortcuts ui:field='shortcuts' />
				</g:west>
				<g:center>
					<g:SimplePanel ui:field="container" />
				</g:center>
			</g:SplitLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>

</ui:UiBinder>
