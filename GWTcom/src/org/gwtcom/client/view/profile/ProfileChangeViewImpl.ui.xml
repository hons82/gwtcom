<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' 
	xmlns:gwtcom='urn:import:org.gwtcom.client.view' xmlns:wall='urn:import:org.gwtcom.client.view.profile.wall'>

	<ui:image field='profileiconimage' src='../img/icon/profileicon.png' />
	<ui:image field='gradient' src='../img/other/gradient_bg_dark.png'
		repeatStyle='Horizontal' />

	<ui:style>
		.main {
			background-color: transparent;
			height: 100%;
		}
		
		.panel {
			padding: 10px;
		}
		
		.imagePanel {
			height: 200px;
			width: 175px;
		}
		
		.header {
			gwt-image: 'gradient';
			background-color: #C6C6C6;
			cursor: pointer;
			text-shadow: rgba(255, 255, 255, 1) 0 1px 1px;
			font-size: 1.2em;
			font-weight: bold;
			color: #000000;
			padding: .5em;
		}
		
		.tab {
			cursor: pointer;
			text-shadow: rgba(255, 255, 255, 1) 0 1px 1px;
			font-size: 1.2em;
			font-weight: bold;
			padding: .5em;
			vertical-align:middle;
   			height: 100%;
		}
		
		.keyText {
			text-align: right;
			width: 200px;
		}
		
		.valueText {
			text-align: left;
			width: 80%;
		}
		
		@if user.agent ie6 {
	  		.profileIcon {
	  	   	    background-image: url(profileicon_ie6.gif);
	    		width: 31px;
	    		height: 22px;
	    		float: left;
	 		 }
	    } @else {
    		@sprite .profileIcon {
      			gwt-image: 'profileiconimage';
      			margin-right: 0.5em;
      			float: left;
    		}
  
 		}
	</ui:style>

	<g:DockLayoutPanel unit='PX' styleName='{style.main}'>
		<g:north size='38'>
			<g:HTMLPanel styleName='{style.header}'>
				<div class='{style.profileIcon}' />
				Change Profile
			</g:HTMLPanel>
		</g:north>

		<g:center>
			<g:TabLayoutPanel barUnit='PX' barHeight='30'>
				<g:tab>
					<g:header>
						<span class='{style.tab}'>General</span>
					</g:header>
				</g:tab>
				<g:tab>
					<g:header>
						<span class='{style.tab}'>Friends</span>
					</g:header>
					<g:Label>No Friends</g:Label>
				</g:tab>
				<g:tab>
					<g:header>
						<span class='{style.tab}'>Pictures</span>
					</g:header>
					<g:Label>No Pictures</g:Label>
				</g:tab>
			</g:TabLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
