<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:gwtcom='urn:import:org.gwtcom.client.panel'>

	<ui:style>
		.panel {
			padding: 10px;
		}
		
		.keyText {
			text-align: right;
			width: 20%;
		}
		
		.valueText {
			text-align: left;
			width: 80%;
		}
		
	</ui:style>

	<g:HTMLPanel styleName='{style.panel}'>
		<table>
			<tr>
				<td styleName='{style.keyText}'>
					<g:Label>Name: </g:Label>
				</td>
				<td styleName='{style.valueText}'>
					<g:Label ui:field="name"></g:Label>
				</td>
			</tr>
			<tr>
				<td styleName='{style.keyText}'>
					<g:Label>e-mail: </g:Label>
				</td>
				<td styleName='{style.valueText}'>
					<g:Label ui:field="email"></g:Label>
				</td>
			</tr>
			<tr>
				<td styleName='{style.keyText}'>
					<g:Label>Gender: </g:Label>
				</td>
				<td styleName='{style.valueText}'>
					<g:Label ui:field="gender"></g:Label>
				</td>
			</tr>
		</table>
	</g:HTMLPanel>

</ui:UiBinder>
